extends layout

block content
    h1 Login
    -data = data || {}

    if errors
        ul.my-errors
            for error in errors
                li= error.msg

    form(action="/login" method="POST" class="form-signin")
        label(for="name") Name:
        input(
            type="text"
            id="name"
            name="name"
            class="form-control"
            value=data.name
        )

        label(for="password") Password:
        input(
            type="password"
            id="password"
            name="password"
            class="form-control"
            value=data.password
        )

        input(
            type="submit"
            value="Submit"
            class="btn btn-lg btn-primary btn-block"
        )